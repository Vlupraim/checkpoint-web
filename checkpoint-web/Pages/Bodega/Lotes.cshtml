@page
@using checkpoint_web.Models
@model checkpoint_web.Pages.Bodega.LotesModel
@{
 ViewData["Title"] = "Consulta de Lotes";
    Layout = Request.Headers["X-Requested-With"] == "XMLHttpRequest" ? null : "/Pages/Shared/_BodegaLayout.cshtml";
}

<h2>Consulta de Lotes</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<div class="row mb-3">
    <div class="col-md-12">
  <div class="card">
    <div class="card-header">
     <h5 class="mb-0">Filtros de Búsqueda</h5>
 </div>
   <div class="card-body">
      <form method="get">
       <div class="row">
    <div class="col-md-3">
  <label class="form-label">Código de Lote</label>
<input type="text" class="form-control" name="codigoLote" placeholder="Ej: LOT-2024-001" />
        </div>
  <div class="col-md-3">
       <label class="form-label">Producto</label>
  <input type="text" class="form-control" name="producto" placeholder="Nombre o SKU" />
        </div>
       <div class="col-md-2">
 <label class="form-label">Estado</label>
  <select class="form-select" name="estado">
        <option value="">Todos</option>
 <option value="Cuarentena">Cuarentena</option>
      <option value="Liberado">Liberado</option>
       <option value="Rechazado">Rechazado</option>
<option value="Bloqueado">Bloqueado</option>
</select>
   </div>
    <div class="col-md-2">
    <label class="form-label">Vencimiento</label>
  <select class="form-select" name="vencimiento">
 <option value="">Todos</option>
     <option value="proximo">Próximos a vencer (7 días)</option>
     <option value="vencido">Vencidos</option>
     </select>
    </div>
       <div class="col-md-2">
   <label class="form-label">&nbsp;</label>
  <button type="submit" class="btn btn-primary w-100">Buscar</button>
     </div>
  </div>
       </form>
  </div>
   </div>
  </div>
</div>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
 <h5 class="mb-0">Lotes Registrados</h5>
  <div>
         <span class="badge bg-warning text-dark me-2">Cuarentena: @Model.CountCuarentena</span>
       <span class="badge bg-success me-2">Liberado: @Model.CountLiberado</span>
   <span class="badge bg-danger me-2">Rechazado: @Model.CountRechazado</span>
      <span class="badge bg-dark me-2">Bloqueado: @Model.CountBloqueado</span>
       </div>
    </div>
    <div class="card-body">
 <div class="table-responsive">
    <table class="table table-striped table-hover">
 <thead>
 <tr>
       <th>Código Lote</th>
      <th>Producto</th>
      <th>Fecha Ingreso</th>
   <th>Fecha Vencimiento</th>
         <th>Cantidad Disponible</th>
  <th>Estado</th>
    <th>Temperatura</th>
      <th>Acciones</th>
      </tr>
         </thead>
      <tbody>
   @if (Model.Lotes != null && Model.Lotes.Count > 0)
   {
       foreach (var lote in Model.Lotes)
       {
           var estadoClass = lote.Estado switch
           {
               EstadoLote.Liberado => "badge bg-success",
               EstadoLote.Cuarentena => "badge bg-warning text-dark",
               EstadoLote.Rechazado => "badge bg-danger",
               EstadoLote.Bloqueado => "badge bg-dark",
               _ => "badge bg-secondary"
           };
           <tr>
               <td><strong>@(string.IsNullOrEmpty(lote.CodigoLote) ? "-" : lote.CodigoLote)</strong></td>
               <td>@(lote.Producto?.Nombre ?? "-")</td>
               <td>@(lote.FechaIngreso.ToString("dd/MM/yyyy"))</td>
               <td>@(lote.FechaVencimiento.HasValue ? lote.FechaVencimiento.Value.ToString("dd/MM/yyyy") : "-")</td>
               <td><strong>@lote.CantidadDisponible.ToString("N3")</strong></td>
               <td><span class="@estadoClass">@lote.Estado</span></td>
               <td>@lote.TempIngreso.ToString("N1")°C</td>
               <td>
                   <button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" 
                           data-bs-target="#detalleModal" 
                           data-lote-id="@lote.Id" 
                           data-lote-codigo="@lote.CodigoLote"
                           data-producto="@lote.Producto?.Nombre"
                           data-sku="@lote.Producto?.Sku"
                           data-proveedor="@(lote.Proveedor?.Nombre ?? "N/A")"
                           data-fecha-ingreso="@lote.FechaIngreso.ToString("dd/MM/yyyy")"
                           data-fecha-vencimiento="@(lote.FechaVencimiento?.ToString("dd/MM/yyyy") ?? "Sin vencimiento")"
                           data-cantidad-inicial="@lote.CantidadInicial"
                           data-cantidad-disponible="@lote.CantidadDisponible"
                           data-temp-ingreso="@lote.TempIngreso"
                           data-estado="@lote.Estado"
                           data-orden-compra="@(lote.OrdenCompra ?? "N/A")"
                           data-guia-recepcion="@(lote.GuiaRecepcion ?? "N/A")">
                       Ver
                   </button>
               </td>
           </tr>
       }
   }
   else
   {
      <tr>
      <td colspan="8" class="text-center text-muted">
     <p class="my-4">No hay lotes registrados o no coinciden con los filtros</p>
     <small>Los lotes se crean automáticamente al registrar una recepción</small>
        </td>
 </tr>
   }
     </tbody>
    </table>
   </div>
    </div>
</div>

<!-- Modal de Detalles del Lote -->
<div class="modal fade" id="detalleModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Detalles del Lote</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6 class="text-muted">Información General</h6>
                        <table class="table table-sm">
                            <tr>
                                <th width="40%">Código Lote:</th>
                                <td><strong id="detalleLoteCodigo">-</strong></td>
                            </tr>
                            <tr>
                                <th>Producto:</th>
                                <td id="detalleProducto">-</td>
                            </tr>
                            <tr>
                                <th>SKU:</th>
                                <td id="detalleSku">-</td>
                            </tr>
                            <tr>
                                <th>Proveedor:</th>
                                <td id="detalleProveedor">-</td>
                            </tr>
                            <tr>
                                <th>Estado:</th>
                                <td><span id="detalleEstado" class="badge">-</span></td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <h6 class="text-muted">Fechas y Cantidades</h6>
                        <table class="table table-sm">
                            <tr>
                                <th width="50%">Fecha Ingreso:</th>
                                <td id="detalleFechaIngreso">-</td>
                            </tr>
                            <tr>
                                <th>Fecha Vencimiento:</th>
                                <td id="detalleFechaVencimiento">-</td>
                            </tr>
                            <tr>
                                <th>Cantidad Inicial:</th>
                                <td id="detalleCantidadInicial">-</td>
                            </tr>
                            <tr>
                                <th>Cantidad Disponible:</th>
                                <td><strong id="detalleCantidadDisponible">-</strong></td>
                            </tr>
                            <tr>
                                <th>Temp. Ingreso:</th>
                                <td id="detalleTempIngreso">-</td>
                            </tr>
                        </table>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12">
                        <h6 class="text-muted">Documentación</h6>
                        <table class="table table-sm">
                            <tr>
                                <th width="30%">Orden de Compra:</th>
                                <td id="detalleOrdenCompra">-</td>
                            </tr>
                            <tr>
                                <th>Guía de Recepción:</th>
                                <td id="detalleGuiaRecepcion">-</td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var detalleModal = document.getElementById('detalleModal');
        if (detalleModal) {
            detalleModal.addEventListener('show.bs.modal', function (event) {
                var button = event.relatedTarget;
                
                // Populate modal fields with null-safe fallback
                document.getElementById('detalleLoteCodigo').textContent = button.getAttribute('data-lote-codigo') || 'N/A';
                document.getElementById('detalleProducto').textContent = button.getAttribute('data-producto') || 'N/A';
                document.getElementById('detalleSku').textContent = button.getAttribute('data-sku') || 'N/A';
                document.getElementById('detalleProveedor').textContent = button.getAttribute('data-proveedor') || 'N/A';
                document.getElementById('detalleFechaIngreso').textContent = button.getAttribute('data-fecha-ingreso') || 'N/A';
                document.getElementById('detalleFechaVencimiento').textContent = button.getAttribute('data-fecha-vencimiento') || 'Sin vencimiento';
                document.getElementById('detalleCantidadInicial').textContent = button.getAttribute('data-cantidad-inicial') || '0';
                document.getElementById('detalleCantidadDisponible').textContent = button.getAttribute('data-cantidad-disponible') || '0';
                document.getElementById('detalleTempIngreso').textContent = (button.getAttribute('data-temp-ingreso') || '0') + '°C';
                document.getElementById('detalleOrdenCompra').textContent = button.getAttribute('data-orden-compra') || 'N/A';
                document.getElementById('detalleGuiaRecepcion').textContent = button.getAttribute('data-guia-recepcion') || 'N/A';
                
                var estado = button.getAttribute('data-estado') || 'Desconocido';
                var estadoBadge = document.getElementById('detalleEstado');
                estadoBadge.textContent = estado;
                estadoBadge.className = 'badge ';
                
                // Fix contrast for Cuarentena badge
                if (estado === 'Cuarentena') estadoBadge.className += 'bg-warning text-dark';
                else if (estado === 'Liberado') estadoBadge.className += 'bg-success';
                else if (estado === 'Rechazado') estadoBadge.className += 'bg-danger';
                else if (estado === 'Bloqueado') estadoBadge.className += 'bg-dark';
                else estadoBadge.className += 'bg-secondary';
                
                console.log('Modal populated:', {
                    codigo: button.getAttribute('data-lote-codigo'),
                    producto: button.getAttribute('data-producto'),
                    estado: estado
                });
            });
        } else {
            console.error('Modal detalleModal not found!');
        }
    </script>
}
