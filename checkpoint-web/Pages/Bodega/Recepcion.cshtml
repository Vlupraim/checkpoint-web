@page
@model checkpoint_web.Pages.Bodega.RecepcionModel
@{
    ViewData["Title"] = "Recepci&oacute;n de Mercader&iacute;a";
    Layout = Request.Headers["X-Requested-With"] == "XMLHttpRequest" ? null : "/Pages/Shared/_BodegaLayout.cshtml";
}
<h1>Recepci&oacute;n de Mercader&iacute;a</h1>
@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-6">
            <h4>Informaci&oacute;n del Lote</h4>
            <div class="mb-3">
                <label asp-for="ProductoId" class="form-label">Producto</label>
                <select asp-for="ProductoId" asp-items="Model.Productos" class="form-select" required>
                    <option value="">-- Seleccione Producto --</option>
                </select>
                <span asp-validation-for="ProductoId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="CodigoLote" class="form-label">C&oacute;digo de Lote</label>
                <input asp-for="CodigoLote" class="form-control" />
                <span asp-validation-for="CodigoLote" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="FechaIngreso" class="form-label">Fecha de Ingreso</label>
                <input asp-for="FechaIngreso" type="date" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="FechaVencimiento" class="form-label">Fecha de Vencimiento</label>
                <input asp-for="FechaVencimiento" type="date" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="TempIngreso" class="form-label">Temperatura de Ingreso (&deg;C)</label>
                <input asp-for="TempIngreso" type="number" step="0.1" class="form-control" />
            </div>
        </div>
        <div class="col-md-6">
            <h4>Stock Inicial</h4>
            <div class="mb-3">
                <label asp-for="UbicacionId" class="form-label">Ubicaci&oacute;n</label>
                <select asp-for="UbicacionId" asp-items="Model.Ubicaciones" class="form-select" required>
                    <option value="">-- Seleccione Ubicaci&oacute;n --</option>
                </select>
                <span asp-validation-for="UbicacionId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Cantidad" class="form-label">Cantidad</label>
                <input asp-for="Cantidad" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Registrar Recepci&oacute;n</button>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}