@page
@model checkpoint_web.Pages.Bodega.AjustesModel
@{
    ViewData["Title"] = "Ajustes de Inventario";
    Layout = Request.Headers["X-Requested-With"] == "XMLHttpRequest" ? null : "/Pages/Shared/_BodegaLayout.cshtml";
}

<h2>Ajustes de Inventario</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Sección: Solicitar Nuevo Ajuste -->
<div class="row mb-4">
    <div class="col-md-12">
        <div class="card border-primary">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Solicitar Nuevo Ajuste</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="row">
                        <div class="col-md-4">
                            <label class="form-label">Lote</label>
                            <select asp-for="LoteId" asp-items="Model.LotesDisponibles" class="form-select" required>
                                <option value="">Seleccionar Lote...</option>
                            </select>
                            <small class="text-muted">Solo lotes liberados</small>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Ubicación</label>
                            <select asp-for="UbicacionId" asp-items="Model.UbicacionesDisponibles" class="form-select" required>
                                <option value="">Seleccionar...</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Tipo de Ajuste</label>
                            <select asp-for="TipoAjuste" class="form-select" required>
                                <option value="">Seleccionar...</option>
                                <option value="Suma">Incremento (+)</option>
                                <option value="Resta">Decremento (-)</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Cantidad</label>
                            <input asp-for="Cantidad" type="number" class="form-control" step="0.01" required />
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-12">
                            <label class="form-label">Motivo del Ajuste</label>
                            <textarea asp-for="Motivo" class="form-control" rows="2" placeholder="Ej: Merma, Error de conteo, Daño en mercancía..." required></textarea>
                        </div>
                    </div>
                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Solicitar Ajuste
                        </button>
                        <button type="reset" class="btn btn-secondary">Limpiar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Sección: Lista de Ajustes -->
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Historial de Ajustes</h5>
                <div>
                    <span class="badge bg-warning me-2">Pendientes: 0</span>
                    <span class="badge bg-success me-2">Aprobados: 0</span>
                    <span class="badge bg-danger">Rechazados: 0</span>
                </div>
            </div>
            <div class="card-body">
                <!-- Filtros rápidos -->
                <div class="mb-3">
                    <div class="btn-group" role="group">
                        <input type="radio" class="btn-check" name="filtroEstado" id="filtroTodos" autocomplete="off" checked />
                        <label class="btn btn-outline-primary btn-sm" for="filtroTodos">Todos</label>
                        
                        <input type="radio" class="btn-check" name="filtroEstado" id="filtroPendiente" autocomplete="off" />
                        <label class="btn btn-outline-warning btn-sm" for="filtroPendiente">Pendientes</label>

                        <input type="radio" class="btn-check" name="filtroEstado" id="filtroAprobado" autocomplete="off" />
                        <label class="btn btn-outline-success btn-sm" for="filtroAprobado">Aprobados</label>

                        <input type="radio" class="btn-check" name="filtroEstado" id="filtroRechazado" autocomplete="off" />
                        <label class="btn btn-outline-danger btn-sm" for="filtroRechazado">Rechazados</label>
                    </div>
                </div>

                <!-- Tabla de ajustes -->
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Fecha Solicitud</th>
                                <th>Lote</th>
                                <th>Producto</th>
                                <th>Tipo</th>
                                <th>Cantidad</th>
                                <th>Motivo</th>
                                <th>Solicitante</th>
                                <th>Estado</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td colspan="10" class="text-center text-muted">
                                    <p class="my-4">No hay ajustes registrados</p>
                                    <small>Los ajustes aparecerán aquí después de ser solicitados</small>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Filtros de estado
        document.querySelectorAll('input[name="filtroEstado"]').forEach(function(radio) {
            radio.addEventListener('change', function() {
                var estado = this.id.replace('filtro', '');
                console.log('Filtrar por estado:', estado);
                // Aquí iría la lógica para filtrar la tabla
            });
        });
    </script>
}
