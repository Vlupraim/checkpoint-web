@page
@model checkpoint_web.Pages.Admin.Ubicaciones.CreateModel
@{
 ViewData["Title"] = "Crear Ubicaci&oacute;n";
 Layout = null;
}
<h1>Crear Ubicaci&oacute;n</h1>
<form method="post">
 <div class="mb-3">
 <label asp-for="Ubicacion.SedeId" class="form-label">Sede</label>
 <select asp-for="Ubicacion.SedeId" asp-items="Model.Sedes" class="form-select">
 <option value="">-- Seleccione Sede --</option>
 </select>
 <span asp-validation-for="Ubicacion.SedeId" class="text-danger"></span>
 </div>
 <div class="mb-3">
 <label asp-for="Ubicacion.Codigo" class="form-label"></label>
 <input asp-for="Ubicacion.Codigo" class="form-control" />
 <span asp-validation-for="Ubicacion.Codigo" class="text-danger"></span>
 </div>
 <div class="mb-3">
 <label asp-for="Ubicacion.Tipo" class="form-label"></label>
 <input asp-for="Ubicacion.Tipo" class="form-control" placeholder="Ej: Refrigerado, Seco, Cuarentena" />
 </div>
 <div class="mb-3">
 <label asp-for="Ubicacion.Capacidad" class="form-label"></label>
 <input asp-for="Ubicacion.Capacidad" class="form-control" type="number" step="0.01" />
 </div>
 <button type="submit" class="btn btn-primary">Crear</button>
 <a class="btn btn-secondary" asp-page="Index">Cancelar</a>
</form>
@section Scripts {
 @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
