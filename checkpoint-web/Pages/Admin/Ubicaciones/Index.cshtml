@page
@model checkpoint_web.Pages.Admin.Ubicaciones.IndexModel
@{
    ViewData["Title"] = "Ubicaciones";
    Layout = Request.Headers["X-Requested-With"] == "XMLHttpRequest" ? null : "/Pages/Shared/_DashboardLayout.cshtml";
}
<h1>Ubicaciones</h1>
<p><a class="btn btn-primary" asp-page="Create">Crear nueva Ubicaci&oacute;n</a></p>
<table class="table">
 <thead>
 <tr><th>Sede</th><th>C&oacute;digo</th><th>Tipo</th><th>Capacidad</th><th></th></tr>
 </thead>
 <tbody>
 @foreach (var u in Model.Ubicaciones)
 {
 <tr>
 <td>@u.Sede?.Nombre</td>
 <td>@u.Codigo</td>
 <td>@u.Tipo</td>
 <td>@u.Capacidad</td>
 <td>
 <a class="btn btn-sm btn-primary" asp-page="Edit" asp-route-id="@u.Id">Editar</a>
 <a class="btn btn-sm btn-danger" asp-page="Delete" asp-route-id="@u.Id">Eliminar</a>
 </td>
 </tr>
 }
 </tbody>
</table>
