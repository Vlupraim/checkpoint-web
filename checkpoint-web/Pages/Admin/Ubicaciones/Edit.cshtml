@page
@model checkpoint_web.Pages.Admin.Ubicaciones.EditModel
@{
 ViewData["Title"] = "Editar Ubicación";
 Layout = null;
}
<h1>Editar Ubicación</h1>
<form method="post">
 <input type="hidden" asp-for="Ubicacion.Id" />
 <div class="mb-3">
 <label asp-for="Ubicacion.SedeId" class="form-label">Sede</label>
 <select asp-for="Ubicacion.SedeId" asp-items="Model.Sedes" class="form-select"></select>
 <span asp-validation-for="Ubicacion.SedeId" class="text-danger"></span>
 </div>
 <div class="mb-3">
 <label asp-for="Ubicacion.Codigo" class="form-label"></label>
 <input asp-for="Ubicacion.Codigo" class="form-control" />
 <span asp-validation-for="Ubicacion.Codigo" class="text-danger"></span>
 </div>
 <div class="mb-3">
 <label asp-for="Ubicacion.Tipo" class="form-label"></label>
 <input asp-for="Ubicacion.Tipo" class="form-control" />
 </div>
 <div class="mb-3">
 <label asp-for="Ubicacion.Capacidad" class="form-label"></label>
 <input asp-for="Ubicacion.Capacidad" class="form-control" type="number" step="0.01" />
 </div>
 <button type="submit" class="btn btn-primary">Guardar</button>
 <a class="btn btn-secondary" asp-page="Index">Cancelar</a>
</form>
@section Scripts {
 @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
