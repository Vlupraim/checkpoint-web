@page "{id?}"
@model checkpoint_web.Pages.Admin.Users.EditRolesModel
@{
 ViewData["Title"] = "Editar roles";
}
<h1>Editar roles para @Model.Email</h1>
<form method="post">
 <input type="hidden" asp-for="UserId" />
 <div class="mb-3">
 @foreach (var role in Model.AllRoles)
 {
 <div class="form-check">
 <input class="form-check-input" type="checkbox" name="Roles" value="@role.Name" checked="@(Model.Roles.Contains(role.Name) ? "checked" : null)" />
 <label class="form-check-label">@role.Name</label>
 </div>
 }
 </div>
 <button type="submit" class="btn btn-primary">Guardar</button>
 <a class="btn btn-secondary" asp-page="Index">Cancelar</a>
</form>
