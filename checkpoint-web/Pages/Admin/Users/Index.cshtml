@page
@model checkpoint_web.Pages.Fragments.UsuariosModel
@{
    ViewData["Title"] = "Usuarios";
    Layout = Request.Headers["X-Requested-With"] == "XMLHttpRequest" ? null : "/Pages/Shared/_DashboardLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-people"></i> Gestión de Usuarios y Roles</h2>
    <a href="/Admin/Users/Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Nuevo Usuario
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div id="alertContainer"></div>

<!-- Token AntiForgery para AJAX -->
<form id="ajaxTokenForm" style="display:none;">
    @Html.AntiForgeryToken()
</form>

<div class="card">
    <div class="card-body">
        @if (Model.Usuarios.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>EMAIL</th>
                            <th>NOMBRE DE USUARIO</th>
                            <th>ROLES</th>
                            <th>ACCIONES</th>
                        </tr>
                    </thead>
                    <tbody id="usersTableBody">
                        @foreach (var usuario in Model.Usuarios)
                        {
                            <tr id="user-row-@usuario.Id">
                                <td>@usuario.Email</td>
                                <td>@usuario.Nombre</td>
                                <td>
                                    @if (usuario.Roles.Any())
                                    {
                                        @foreach (var role in usuario.Roles)
                                        {
                                            <span class="badge bg-primary me-1">@role</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">Sin roles</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="/Admin/Users/EditRoles?id=@usuario.Id" class="btn btn-outline-primary">
                                            <i class="bi bi-pencil"></i> Editar Roles
                                        </a>
                                        <button type="button" class="btn btn-outline-danger btn-delete-user" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#deleteModal"
                                                data-user-id="@usuario.Id"
                                                data-user-email="@usuario.Email">
                                            <i class="bi bi-trash"></i> Eliminar
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                No hay usuarios registrados en el sistema.
            </div>
        }
    </div>
</div>

<!-- Modal de Confirmación de Eliminación -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="bi bi-exclamation-triangle"></i> Confirmar Eliminación
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mb-2">¿Está seguro de eliminar el usuario?</p>
                <p class="mb-0"><strong id="userEmailDisplay"></strong></p>
                <p class="text-danger mt-3 mb-0">
                    <i class="bi bi-info-circle"></i> Esta acción no se puede deshacer.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">
                    <i class="bi bi-trash"></i> Eliminar Usuario
                </button>
            </div>
        </div>
    </div>
</div>

<script>
(function() {
    console.log('🔧 [UserDelete] Script loading...');
    
    // Wait for DOM to be ready
    function initDeleteScript() {
        console.log('🔧 [UserDelete] Initializing...');
        
        var currentUserId = null;
        var currentUserEmail = null;
        
        // Use setTimeout to ensure modal is in DOM
        setTimeout(function() {
            var deleteModal = document.getElementById('deleteModal');
            var confirmBtn = document.getElementById('confirmDeleteBtn');
            
            console.log('🔍 [UserDelete] deleteModal found:', !!deleteModal);
            console.log('🔍 [UserDelete] confirmDeleteBtn found:', !!confirmBtn);
            
            if (!deleteModal || !confirmBtn) {
                console.error('❌ [UserDelete] Modal or button not found! Retrying in 500ms...');
                setTimeout(initDeleteScript, 500);
                return;
            }
            
            var modalInstance = null;

            // Event listener for modal show
            deleteModal.addEventListener('show.bs.modal', function (event) {
                var button = event.relatedTarget;
                currentUserId = button.getAttribute('data-user-id');
                currentUserEmail = button.getAttribute('data-user-email');
                
                console.log('✅ [UserDelete] Modal opened for:', currentUserId, currentUserEmail);
                
                var emailDisplay = document.getElementById('userEmailDisplay');
                if (emailDisplay) {
                    emailDisplay.textContent = currentUserEmail;
                }
                
                modalInstance = bootstrap.Modal.getInstance(deleteModal) || new bootstrap.Modal(deleteModal);
            });

            // Event listener for delete confirmation
            confirmBtn.addEventListener('click', function(e) {
                console.log('🗑️ [UserDelete] Delete button clicked!');
                console.log('   User ID:', currentUserId);
                console.log('   User Email:', currentUserEmail);
                
                if (!currentUserId) {
                    console.error('❌ [UserDelete] No user ID found');
                    showAlert('danger', 'Error: No se pudo identificar el usuario a eliminar');
                    return;
                }

                var btn = this;
                btn.disabled = true;
                btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Eliminando...';
                console.log('⏳ [UserDelete] Button disabled, sending request...');

                var token = document.querySelector('#ajaxTokenForm input[name="__RequestVerificationToken"]')?.value;
                console.log('🔑 [UserDelete] Token found:', !!token);

                if (!token) {
                    console.error('❌ [UserDelete] Antiforgery token not found');
                    showAlert('danger', 'Error de seguridad: Token no encontrado');
                    resetButton(btn);
                    return;
                }

                var formData = new FormData();
                formData.append('__RequestVerificationToken', token);
                formData.append('id', currentUserId);

                console.log('📤 [UserDelete] Sending POST to /Admin/Users/Delete');

                fetch('/Admin/Users/Delete', {
                    method: 'POST',
                    body: formData,
                    credentials: 'same-origin',
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                })
                .then(response => {
                    console.log('📥 [UserDelete] Response received:', response.status, response.statusText);
                    
                    if (!response.ok) {
                        throw new Error(`HTTP ${response.status}: ${response.statusText}`);
                    }
                    
                    if (response.redirected) {
                        console.log('🔀 [UserDelete] Redirected to:', response.url);
                    }
                    
                    return response.text();
                })
                .then(html => {
                    console.log('✅ [UserDelete] User deleted successfully!');
                    
                    if (modalInstance) {
                        modalInstance.hide();
                    }

                    var row = document.getElementById('user-row-' + currentUserId);
                    if (row) {
                        row.style.transition = 'opacity 0.3s';
                        row.style.opacity = '0';
                        setTimeout(() => row.remove(), 300);
                    }

                    showAlert('success', `Usuario <strong>${escapeHtml(currentUserEmail)}</strong> eliminado exitosamente`);
                })
                .catch(error => {
                    console.error('❌ [UserDelete] Error:', error);
                    
                    if (modalInstance) {
                        modalInstance.hide();
                    }

                    showAlert('danger', `Error al eliminar el usuario: ${error.message}`);
                })
                .finally(() => {
                    console.log('🔄 [UserDelete] Request completed, resetting button');
                    resetButton(btn);
                    currentUserId = null;
                    currentUserEmail = null;
                });
            });

            function showAlert(type, message) {
                var iconClass = type === 'success' ? 'bi-check-circle' : 'bi-exclamation-triangle';
                var alertHtml = `
                    <div class="alert alert-${type} alert-dismissible fade show">
                        <i class="bi ${iconClass}"></i> ${message}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                `;
                var container = document.getElementById('alertContainer');
                if (container) {
                    container.innerHTML = alertHtml;
                }

                setTimeout(() => {
                    var alert = document.querySelector('#alertContainer .alert');
                    if (alert && bootstrap.Alert) {
                        var bsAlert = new bootstrap.Alert(alert);
                        bsAlert.close();
                    }
                }, 5000);
            }

            function resetButton(btn) {
                btn.disabled = false;
                btn.innerHTML = '<i class="bi bi-trash"></i> Eliminar Usuario';
            }

            function escapeHtml(text) {
                var div = document.createElement('div');
                div.textContent = text;
                return div.innerHTML;
            }
            
            console.log('✅ [UserDelete] Script initialized successfully!');
        }, 100);
    }
    
    // Check if DOM is already loaded
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initDeleteScript);
    } else {
        initDeleteScript();
    }
})();
</script>
