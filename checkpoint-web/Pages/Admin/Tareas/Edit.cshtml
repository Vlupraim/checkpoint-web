@page
@model checkpoint_web.Pages.Admin.Tareas.EditModel
@{
    ViewData["Title"] = "Editar Tarea";
    Layout = "/Pages/Shared/_DashboardLayout.cshtml";
}

<h2>?? Editar Tarea</h2>

<div class="card">
    <div class="card-body">
   <form method="post">
<input type="hidden" asp-for="Tarea.Id" />

    <div class="row">
   <div class="col-md-8 mb-3">
    <label asp-for="Tarea.Titulo" class="form-label"></label>
   <input asp-for="Tarea.Titulo" class="form-control" required />
        </div>
    <div class="col-md-4 mb-3">
        <label asp-for="Tarea.Prioridad" class="form-label"></label>
   <select asp-for="Tarea.Prioridad" asp-items="Model.PrioridadesSelectList" class="form-select"></select>
     </div>
  </div>

   <div class="mb-3">
  <label asp-for="Tarea.Descripcion" class="form-label"></label>
   <textarea asp-for="Tarea.Descripcion" class="form-control" rows="4"></textarea>
     </div>

            <div class="row">
   <div class="col-md-4 mb-3">
      <label asp-for="Tarea.Estado" class="form-label"></label>
  <select asp-for="Tarea.Estado" asp-items="Model.EstadosSelectList" class="form-select"></select>
 </div>
   <div class="col-md-4 mb-3">
     <label asp-for="Tarea.Progreso" class="form-label"></label>
   <input asp-for="Tarea.Progreso" type="number" min="0" max="100" class="form-control" />
       </div>
<div class="col-md-4 mb-3">
     <label asp-for="Tarea.FechaLimite" class="form-label"></label>
    <input asp-for="Tarea.FechaLimite" type="datetime-local" class="form-control" />
    </div>
   </div>

       <div class="mb-3">
   <label asp-for="Tarea.Observaciones" class="form-label"></label>
     <textarea asp-for="Tarea.Observaciones" class="form-control" rows="3"></textarea>
   </div>

  <div class="d-flex justify-content-between mt-4">
       <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
<button type="submit" class="btn btn-primary">Actualizar</button>
   </div>
 </form>
    </div>
</div>
