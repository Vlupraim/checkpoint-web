@page
@model checkpoint_web.Pages.Admin.AuditLogs.IndexModel
@{
    ViewData["Title"] = "Registro de Auditoría";
    
    // Determinar layout según contexto de navegación
    var isAjax = Request.Headers["X-Requested-With"] == "XMLHttpRequest";
    var referer = Request.Headers["Referer"].ToString();
    var isFromCalidad = referer.Contains("/Calidad/") || Request.Query.ContainsKey("fromCalidad");
    
    Layout = isAjax ? null : (isFromCalidad ? "/Pages/Shared/_CalidadLayout.cshtml" : "/Pages/Shared/_AdminLayout.cshtml");
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-journal-text"></i> Registro de Auditoría</h2>
    <div>
        <span class="badge bg-primary">Total: @Model.TotalRecords registros</span>
    </div>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0"><i class="bi bi-funnel"></i> Filtros</h5>
    </div>
    <div class="card-body">
        <form method="get" class="row g-3" id="filterForm" onsubmit="return true;">
            <input type="hidden" name="PageNumber" value="1" />
            @if (isFromCalidad)
            {
                <input type="hidden" name="fromCalidad" value="true" />
            }
            <div class="col-md-3">
                <label class="form-label">Usuario (ID o Email)</label>
                <input asp-for="UserFilter" class="form-control" placeholder="Buscar por usuario..." />
            </div>
            <div class="col-md-3">
                <label class="form-label">Acción</label>
                <input asp-for="ActionFilter" class="form-control" placeholder="CreateUser, DeleteSede..." />
            </div>
            <div class="col-md-2">
                <label class="form-label">Desde</label>
                <input asp-for="From" type="date" class="form-control" />
            </div>
            <div class="col-md-2">
                <label class="form-label">Hasta</label>
                <input asp-for="To" type="date" class="form-control" />
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-search"></i> Filtrar
                </button>
            </div>
        </form>
        @if (!string.IsNullOrEmpty(Model.UserFilter) || !string.IsNullOrEmpty(Model.ActionFilter) || Model.From.HasValue || Model.To.HasValue)
        {
            <div class="mt-3">
                <a href="@Url.Page("/Admin/AuditLogs/Index", new { fromCalidad = isFromCalidad ? "true" : null })" class="btn btn-sm btn-outline-secondary">
                    <i class="bi bi-x-circle"></i> Limpiar filtros
                </a>
            </div>
        }
    </div>
</div>

<div class="card">
    <div class="card-body">
        @if (Model.Logs.Any())
        {
            <!-- Paginación Superior (estilo Gmail) -->
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="text-muted">
                    Mostrando @((Model.PageNumber - 1) * Model.PageSize + 1) - @(Math.Min(Model.PageNumber * Model.PageSize, Model.TotalRecords)) de @Model.TotalRecords registros
                </div>
                <div class="btn-group" role="group">
                    @if (Model.HasPreviousPage)
                    {
                        <a asp-page="/Admin/AuditLogs/Index" 
                           asp-route-PageNumber="@(Model.PageNumber - 1)"
                           asp-route-UserFilter="@Model.UserFilter"
                           asp-route-ActionFilter="@Model.ActionFilter"
                           asp-route-From="@Model.From?.ToString("yyyy-MM-dd")"
                           asp-route-To="@Model.To?.ToString("yyyy-MM-dd")"
                           asp-route-fromCalidad="@(isFromCalidad ? "true" : null)"
                           class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-chevron-left"></i> Anterior
                        </a>
                    }
                    else
                    {
                        <button class="btn btn-outline-secondary btn-sm" disabled>
                            <i class="bi bi-chevron-left"></i> Anterior
                        </button>
                    }
                    
                    <button class="btn btn-outline-secondary btn-sm" disabled>
                        Página @Model.PageNumber de @Model.TotalPages
                    </button>
                    
                    @if (Model.HasNextPage)
                    {
                        <a asp-page="/Admin/AuditLogs/Index" 
                           asp-route-PageNumber="@(Model.PageNumber + 1)"
                           asp-route-UserFilter="@Model.UserFilter"
                           asp-route-ActionFilter="@Model.ActionFilter"
                           asp-route-From="@Model.From?.ToString("yyyy-MM-dd")"
                           asp-route-To="@Model.To?.ToString("yyyy-MM-dd")"
                           asp-route-fromCalidad="@(isFromCalidad ? "true" : null)"
                           class="btn btn-outline-secondary btn-sm">
                            Siguiente <i class="bi bi-chevron-right"></i>
                        </a>
                    }
                    else
                    {
                        <button class="btn btn-outline-secondary btn-sm" disabled>
                            Siguiente <i class="bi bi-chevron-right"></i>
                        </button>
                    }
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-hover table-sm">
                    <thead class="table-light">
                        <tr>
                            <th style="width:160px;">Fecha y Hora</th>
                            <th style="width:200px;">Usuario</th>
                            <th style="width:250px;">Acción</th>
                            <th>Detalles</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var log in Model.Logs)
                        {
                            var userName = !string.IsNullOrEmpty(log.UserId) && Model.UserNames.ContainsKey(log.UserId) 
                                ? Model.UserNames[log.UserId] 
                                : "Sistema";
                            var actionType = log.Action.Split(':')[0];
                            var badgeClass = actionType.Contains("Create") ? "bg-success" :
                                             actionType.Contains("Delete") ? "bg-danger" :
                                             actionType.Contains("Update") || actionType.Contains("Edit") ? "bg-warning" :
                                             actionType.Contains("GET") || actionType.Contains("POST") ? "bg-info" :
                                             "bg-secondary";

                            <tr>
                                <td>
                                    <small class="text-muted">@log.Timestamp.ToLocalTime().ToString("dd/MM/yyyy")</small><br />
                                    <strong>@log.Timestamp.ToLocalTime().ToString("HH:mm:ss")</strong>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-person-circle me-2"></i>
                                        <div>
                                            <strong>@userName</strong>
                                            @if (!string.IsNullOrEmpty(log.UserId) && userName != log.UserId && log.UserId.Length >= 8)
                                            {
                                                <br /><small class="text-muted">@log.UserId.Substring(0, 8)...</small>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge @badgeClass">@actionType</span>
                                    @if (log.Action.Contains(":"))
                                    {
                                        <br /><small class="text-muted">@log.Action.Split(':')[1]</small>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(log.Details))
                                    {
                                        @if (log.Details.Length > 100)
                                        {
                                            <details>
                                                <summary class="text-primary" style="cursor: pointer;">Ver detalles...</summary>
                                                <pre class="mt-2 p-2 bg-light rounded" style="max-height:300px; overflow:auto; font-size:0.85rem;">@log.Details</pre>
                                            </details>
                                        }
                                        else
                                        {
                                            <code class="text-muted">@log.Details</code>
                                        }
                                    }
                                    else
                                    {
                                        <em class="text-muted">Sin detalles</em>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Paginación Inferior (estilo Gmail) -->
            <div class="d-flex justify-content-between align-items-center mt-3">
                <div class="text-muted">
                    Mostrando @((Model.PageNumber - 1) * Model.PageSize + 1) - @(Math.Min(Model.PageNumber * Model.PageSize, Model.TotalRecords)) de @Model.TotalRecords registros
                </div>
                <div class="btn-group" role="group">
                    @if (Model.HasPreviousPage)
                    {
                        <a asp-page="/Admin/AuditLogs/Index" 
                           asp-route-PageNumber="@(Model.PageNumber - 1)"
                           asp-route-UserFilter="@Model.UserFilter"
                           asp-route-ActionFilter="@Model.ActionFilter"
                           asp-route-From="@Model.From?.ToString("yyyy-MM-dd")"
                           asp-route-To="@Model.To?.ToString("yyyy-MM-dd")"
                           asp-route-fromCalidad="@(isFromCalidad ? "true" : null)"
                           class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-chevron-left"></i> Anterior
                        </a>
                    }
                    else
                    {
                        <button class="btn btn-outline-secondary btn-sm" disabled>
                            <i class="bi bi-chevron-left"></i> Anterior
                        </button>
                    }
                    
                    <button class="btn btn-outline-secondary btn-sm" disabled>
                        Página @Model.PageNumber de @Model.TotalPages
                    </button>
                    
                    @if (Model.HasNextPage)
                    {
                        <a asp-page="/Admin/AuditLogs/Index" 
                           asp-route-PageNumber="@(Model.PageNumber + 1)"
                           asp-route-UserFilter="@Model.UserFilter"
                           asp-route-ActionFilter="@Model.ActionFilter"
                           asp-route-From="@Model.From?.ToString("yyyy-MM-dd")"
                           asp-route-To="@Model.To?.ToString("yyyy-MM-dd")"
                           asp-route-fromCalidad="@(isFromCalidad ? "true" : null)"
                           class="btn btn-outline-secondary btn-sm">
                            Siguiente <i class="bi bi-chevron-right"></i>
                        </a>
                    }
                    else
                    {
                        <button class="btn btn-outline-secondary btn-sm" disabled>
                            Siguiente <i class="bi bi-chevron-right"></i>
                        </button>
                    }
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle"></i> No se encontraron registros de auditoría con los filtros aplicados.
            </div>
        }
    </div>
</div>

