@page "{id:int}"
@model checkpoint_web.Pages.Admin.Proveedores.EditModel
@{
    ViewData["Title"] = "Editar Proveedor";
    Layout = "/Pages/Shared/_AdminLayout.cshtml";
}

<h2><i class="bi bi-pencil"></i> Editar Proveedor</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        <form method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Proveedor.Id" />
            <input type="hidden" asp-for="Proveedor.FechaRegistro" />
            <input type="hidden" asp-for="Proveedor.Activo" />

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Proveedor.Nombre" class="form-label">Nombre *</label>
                    <input asp-for="Proveedor.Nombre" class="form-control" required />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Proveedor.NombreComercial" class="form-label">Nombre Comercial</label>
                    <input asp-for="Proveedor.NombreComercial" class="form-control" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="Proveedor.Categoria" class="form-label">Categoría</label>
                    <select asp-for="Proveedor.Categoria" class="form-select">
                        <option value="">-- Seleccione --</option>
                        <option value="MateriaPrima">Materia Prima</option>
                        <option value="Perecibles">Perecibles</option>
                        <option value="Embalaje">Embalaje</option>
                        <option value="Servicios">Servicios</option>
                        <option value="Logística">Logística</option>
                    </select>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="Proveedor.Calificacion" class="form-label">Calificación</label>
                    <select asp-for="Proveedor.Calificacion" class="form-select">
                        <option value="">Sin calificar</option>
                        <option value="1">⭐ 1 estrella</option>
                        <option value="2">⭐⭐ 2 estrellas</option>
                        <option value="3">⭐⭐⭐ 3 estrellas</option>
                        <option value="4">⭐⭐⭐⭐ 4 estrellas</option>
                        <option value="5">⭐⭐⭐⭐⭐ 5 estrellas</option>
                    </select>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="Proveedor.Estado" class="form-label">Estado</label>
                    <select asp-for="Proveedor.Estado" class="form-select">
                        <option value="Activo">Activo</option>
                        <option value="Inactivo">Inactivo</option>
                        <option value="Suspendido">Suspendido</option>
                        <option value="Homologado">Homologado</option>
                    </select>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Proveedor.IdentificadorFiscal" class="form-label">RUT/NIT</label>
                    <input asp-for="Proveedor.IdentificadorFiscal" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Proveedor.Telefono" class="form-label">Teléfono</label>
                    <input asp-for="Proveedor.Telefono" class="form-control" />
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Proveedor.Email" class="form-label">Email</label>
                <input asp-for="Proveedor.Email" type="email" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Proveedor.PersonaContacto" class="form-label">Persona de Contacto</label>
                <input asp-for="Proveedor.PersonaContacto" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Proveedor.Direccion" class="form-label">Dirección</label>
                <textarea asp-for="Proveedor.Direccion" class="form-control" rows="2"></textarea>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Proveedor.Ciudad" class="form-label">Ciudad</label>
                    <input asp-for="Proveedor.Ciudad" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Proveedor.Pais" class="form-label">País</label>
                    <input asp-for="Proveedor.Pais" class="form-control" />
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Proveedor.Observaciones" class="form-label">Observaciones</label>
                <textarea asp-for="Proveedor.Observaciones" class="form-control" rows="3"></textarea>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Actualizar Proveedor
                </button>
            </div>
        </form>
    </div>
</div>
