@page
@model checkpoint_web.Pages.Admin.Sedes.EditModel
@{
 ViewData["Title"] = "Editar Sede";
 Layout = "/Pages/Shared/_DashboardLayout.cshtml";
}
<h1>Editar Sede</h1>
<form method="post">
 <input type="hidden" asp-for="Sede.Id" />
 <div class="mb-3">
 <label asp-for="Sede.Codigo" class="form-label"></label>
 <input asp-for="Sede.Codigo" class="form-control" />
 <span asp-validation-for="Sede.Codigo" class="text-danger"></span>
 </div>
 <div class="mb-3">
 <label asp-for="Sede.Nombre" class="form-label"></label>
 <input asp-for="Sede.Nombre" class="form-control" />
 <span asp-validation-for="Sede.Nombre" class="text-danger"></span>
 </div>
 <div class="mb-3">
 <label asp-for="Sede.Direccion" class="form-label"></label>
 <input asp-for="Sede.Direccion" class="form-control" />
 </div>
 <div class="form-check mb-3">
 <input asp-for="Sede.Activa" class="form-check-input" />
 <label asp-for="Sede.Activa" class="form-check-label"></label>
 </div>
 <button type="submit" class="btn btn-primary">Guardar</button>
 <a class="btn btn-secondary" asp-page="Index">Cancelar</a>
</form>
@section Scripts {
 @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
