@page
@model checkpoint_web.Pages.Admin.Sedes.IndexModel
@{
    ViewData["Title"] = "Sedes";
    Layout = Request.Headers["X-Requested-With"] == "XMLHttpRequest" ? null : "/Pages/Shared/_DashboardLayout.cshtml";
}
<h1>Sedes</h1>
<p><a class="btn btn-primary" asp-page="Create">Crear nueva Sede</a></p>
<table class="table">
 <thead>
 <tr><th>C&oacute;digo</th><th>Nombre</th><th>Direcci&oacute;n</th><th>Activa</th><th></th></tr>
 </thead>
 <tbody>
 @foreach (var s in Model.Sedes)
 {
 <tr>
 <td>@s.Codigo</td>
 <td>@s.Nombre</td>
 <td>@s.Direccion</td>
 <td>@(s.Activa ? "S&iacute;" : "No")</td>
 <td>
 <a class="btn btn-sm btn-primary" asp-page="Edit" asp-route-id="@s.Id">Editar</a>
 <a class="btn btn-sm btn-danger" asp-page="Delete" asp-route-id="@s.Id">Eliminar</a>
 </td>
 </tr>
 }
 </tbody>
</table>
