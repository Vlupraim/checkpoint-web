@page
@model checkpoint_web.Pages.Admin.Clientes.EditModel
@{
    ViewData["Title"] = "Editar Cliente";
    Layout = "/Pages/Shared/_DashboardLayout.cshtml";
}

<h2>✏️ Editar Cliente</h2>

<div class="card">
    <div class="card-body">
  <form method="post">
      <input type="hidden" asp-for="Cliente.Id" />
   <input type="hidden" asp-for="Cliente.FechaRegistro" />
 <input type="hidden" asp-for="Cliente.Activo" />

       <div class="row">
    <div class="col-md-6 mb-3">
<label asp-for="Cliente.Nombre" class="form-label"></label>
    <input asp-for="Cliente.Nombre" class="form-control" required />
  </div>
      <div class="col-md-6 mb-3">
     <label asp-for="Cliente.NombreComercial" class="form-label"></label>
 <input asp-for="Cliente.NombreComercial" class="form-control" />
 </div>
   </div>

 <div class="row">
  <div class="col-md-4 mb-3">
  <label asp-for="Cliente.IdentificadorFiscal" class="form-label"></label>
 <input asp-for="Cliente.IdentificadorFiscal" class="form-control" />
     </div>
      <div class="col-md-4 mb-3">
   <label asp-for="Cliente.Telefono" class="form-label"></label>
<input asp-for="Cliente.Telefono" class="form-control" />
  </div>
     <div class="col-md-4 mb-3">
  <label asp-for="Cliente.Estado" class="form-label"></label>
   <select asp-for="Cliente.Estado" class="form-select">
 <option value="Activo">Activo</option>
   <option value="Inactivo">Inactivo</option>
      <option value="Suspendido">Suspendido</option>
 </select>
    </div>
   </div>

  <div class="mb-3">
    <label asp-for="Cliente.Email" class="form-label"></label>
    <input asp-for="Cliente.Email" type="email" class="form-control" />
     </div>

   <div class="mb-3">
 <label asp-for="Cliente.Direccion" class="form-label"></label>
  <textarea asp-for="Cliente.Direccion" class="form-control" rows="2"></textarea>
     </div>

 <div class="row">
      <div class="col-md-6 mb-3">
    <label asp-for="Cliente.Ciudad" class="form-label"></label>
  <input asp-for="Cliente.Ciudad" class="form-control" />
 </div>
   <div class="col-md-6 mb-3">
     <label asp-for="Cliente.Pais" class="form-label"></label>
    <input asp-for="Cliente.Pais" class="form-control" />
      </div>
     </div>

     <div class="mb-3">
   <label asp-for="Cliente.PersonaContacto" class="form-label"></label>
  <input asp-for="Cliente.PersonaContacto" class="form-control" />
  </div>

   <div class="mb-3">
   <label asp-for="Cliente.Observaciones" class="form-label"></label>
 <textarea asp-for="Cliente.Observaciones" class="form-control" rows="3"></textarea>
  </div>

<div class="d-flex justify-content-between mt-4">
    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
    <button type="submit" class="btn btn-primary">Actualizar</button>
   </div>
</form>
    </div>
</div>
