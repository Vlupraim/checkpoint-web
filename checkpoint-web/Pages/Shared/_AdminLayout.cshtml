@using Microsoft.AspNetCore.Authentication

@{
    var authProperties = await Context.AuthenticateAsync();
    var isPersistent = authProperties?.Properties?.IsPersistent ?? false;
}
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Checkpoint</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/theme-minimal.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/checkpoint_web.styles.css" asp-append-version="true" />
</head>

<body data-authenticated="@(User.Identity?.IsAuthenticated == true ? "True" : "False")" data-persistent="@(isPersistent ? "True" : "False")">
    <!-- Single Header -->
    <header>
        <nav class="navbar navbar-expand-md navbar-light bg-white border-bottom box-shadow mb-0">
            <div class="container-fluid">
                <a class="navbar-brand me-3 d-flex align-items-center" href="/Admin/Dashboard">
                    <img src="~/images/logo-icon.png" alt="Logo Checkpoint" class="logo-mini me-1" />
                    <img src="~/images/logo-text.png" alt="Texto Checkpoint" class="logo-text" />
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#topNavbar"
                        aria-controls="#topNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="topNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-md-0">
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/Dashboard">Inicio</a>
                        </li>
                    </ul>

                    <form class="d-none d-md-flex mx-auto" method="get">
                        <input class="form-control me-2 search-bar" type="search" placeholder="Buscar..." aria-label="Buscar" />
                        <button class="btn btn-outline-secondary" type="submit">Buscar</button>
                    </form>

                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity?.IsAuthenticated == true) {
                            try { @await Component.InvokeAsync("Notifications"); } catch {}
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userMenu" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Hola, @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenu">
                                    <li><a class="dropdown-item" href="/Account/DashboardRedirect"><i class="bi bi-house"></i> Mi Panel</a></li>
                                    @if (User.IsInRole("Administrador")) { <li><a class="dropdown-item" href="/Admin/Dashboard"><i class="bi bi-gear"></i> Panel Administrador</a></li> }
                                    @if (User.IsInRole("PersonalBodega")) { <li><a class="dropdown-item" href="/Bodega/Dashboard"><i class="bi bi-box"></i> Panel Bodega</a></li> }
                                    @if (User.IsInRole("ControlCalidad")) { <li><a class="dropdown-item" href="/Calidad/Dashboard"><i class="bi bi-check-circle"></i> Panel Calidad</a></li> }
                                    <li><hr class="dropdown-divider" /></li>
                                    <li>
                                        <form method="post" asp-page="/Account/Logout" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-link dropdown-item text-start"><i class="bi bi-box-arrow-right"></i> Cerrar Sesión</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Dashboard Layout -->
    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-2 d-none d-md-block sidebar py-3">
                <div class="nav flex-column">
                    <div class="sidebar-section-header">PANEL PRINCIPAL</div>
                    <a class="nav-link active" href="#" data-url="/Admin/Dashboard" data-path="/Admin/Dashboard"><i class="bi bi-speedometer2"></i> Dashboard</a>

                    <div class="sidebar-section-header">GESTIÓN DE ACCESOS</div>
                    <!-- CAMBIADO: Link directo a /Admin/Users en lugar de AJAX -->
                    <a class="nav-link" href="/Admin/Users"><i class="bi bi-people"></i> Usuarios y Roles</a>

                    <div class="sidebar-section-header">INFRAESTRUCTURA</div>
                    <a class="nav-link" href="#" data-url="/Admin/Sedes/Index" data-path="/Admin/Sedes"><i class="bi bi-building"></i> Sedes</a>
                    <a class="nav-link" href="#" data-url="/Admin/Ubicaciones/Index" data-path="/Admin/Ubicaciones"><i class="bi bi-geo-alt"></i> Ubicaciones</a>

                    <div class="sidebar-section-header">GESTIÓN DE PROCESOS</div>
                    <a class="nav-link" href="#" data-url="/Admin/Tareas/Index" data-path="/Admin/Tareas"><i class="bi bi-check2-square"></i> Tareas y Procesos</a>
                    <!-- OCULTO TEMPORALMENTE
                    <a class="nav-link" href="#" data-url="/Admin/Ajustes/Index" data-path="/Admin/Ajustes"><i class="bi bi-clipboard-check"></i> Aprobación Ajustes</a>
                    -->

                    <div class="sidebar-section-header">CATÁLOGOS</div>
                    <a class="nav-link" href="#" data-url="/Fragments/Productos" data-path="/Productos"><i class="bi bi-box-seam"></i> Productos</a>
                    <a class="nav-link" href="#" data-url="/Admin/Clientes/Index" data-path="/Admin/Clientes"><i class="bi bi-person-badge"></i> Clientes</a>
                    <a class="nav-link" href="#" data-url="/Admin/Proveedores/Index" data-path="/Admin/Proveedores"><i class="bi bi-truck"></i> Proveedores</a>

                    <div class="sidebar-section-header">REPORTES</div>
                    <a class="nav-link" href="#" data-url="/Reportes/Index" data-path="/Reportes"><i class="bi bi-graph-up"></i> Dashboard Reportes</a>
                    <a class="nav-link" href="#" data-url="/Reportes/Movimientos" data-path="/Reportes/Movimientos"><i class="bi bi-list-check"></i> Historial Movimientos</a>
                    <a class="nav-link" href="#" data-url="/Reportes/Tareas" data-path="/Reportes/Tareas"><i class="bi bi-clipboard-data"></i> Reporte Tareas</a>
                    <a class="nav-link" href="#" data-url="/Admin/AuditLogs/Index" data-path="/Admin/AuditLogs"><i class="bi bi-shield-check"></i> Auditoría Sistema</a>
                </div>
            </nav>
            <main class="col-md-10 ms-sm-auto col-lg-10 px-md-4 py-md-4 py-3">
                <div id="dashboardContent">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        (function() {
            const mapping = {
                '/Productos': '/Fragments/Productos',
                '/Admin/Users': '/Admin/Users/Index',
                '/Admin/Dashboard': '/Admin/Dashboard',
                '/Admin/Sedes': '/Admin/Sedes/Index',
                '/Admin/Ubicaciones': '/Admin/Ubicaciones/Index',
                '/Admin/Tareas': '/Admin/Tareas/Index',
                '/Admin/Ajustes': '/Admin/Ajustes/Index',
                '/Admin/Clientes': '/Admin/Clientes/Index',
                '/Admin/Proveedores': '/Admin/Proveedores/Index',
                '/Reportes': '/Reportes/Index',
                '/Reportes/Movimientos': '/Reportes/Movimientos',
                '/Reportes/Tareas': '/Reportes/Tareas',
                '/Admin/AuditLogs': '/Admin/AuditLogs/Index'
            };

            let spaNavigating = false;  // Flag para evitar doble navegación

            function loadUrl(url, replaceState) {
                if (spaNavigating) return;  // Evitar re-entry
                spaNavigating = true;

                fetch(url, { credentials: 'same-origin', headers: { 'X-Requested-With': 'XMLHttpRequest' } })
                    .then(function(resp) {
                        if (!resp.ok) throw new Error('HTTP ' + resp.status);
                        return resp.text();
                    })
                    .then(function(html) {
                        document.getElementById('dashboardContent').innerHTML = html;
                        if (replaceState) history.replaceState({ url: url }, '', location.pathname);
                        spaNavigating = false;
                    })
                    .catch(function(err) {
                        console.error('Load error:', err);
                        document.getElementById('dashboardContent').innerHTML = '<div class="alert alert-danger">Error al cargar el contenido: ' + err.message + '</div>';
                        spaNavigating = false;
                    });
            }

            document.addEventListener('DOMContentLoaded', function() {
                // SOLO sidebar links con data-url
                document.querySelectorAll('.sidebar a[data-url]').forEach(function(a) {
                    a.addEventListener('click', function(e) {
                        e.preventDefault();
                        e.stopPropagation();  // Evitar propagación
                        
                        document.querySelectorAll('.sidebar a').forEach(function(link) { link.classList.remove('active'); });
                        a.classList.add('active');
                        var url = a.getAttribute('data-url');
                        var path = a.getAttribute('data-path') || url;
                        
                        if (spaNavigating) return;
                        spaNavigating = true;

                        fetch(url, { credentials: 'same-origin', headers: { 'X-Requested-With': 'XMLHttpRequest' } })
                            .then(function(resp) { if (!resp.ok) throw new Error('HTTP ' + resp.status); return resp.text(); })
                            .then(function(html) { 
                                document.getElementById('dashboardContent').innerHTML = html; 
                                history.pushState({ url: url }, '', path); 
                                spaNavigating = false;
                            })
                            .catch(function(err) { 
                                console.error('Navigation error:', err); 
                                document.getElementById('dashboardContent').innerHTML = '<div class="alert alert-danger">Error al cargar el contenido: ' + err.message + '</div>'; 
                                spaNavigating = false;
                            });
                    });
                });

                // Browser back/forward - SOLO si es navegación del sidebar
                window.addEventListener('popstate', function(event) {
                    var state = event.state;
                    
                    // Solo interceptar si hay state (navegación SPA)
                    if (state && state.url) {
                        loadUrl(state.url, false);
                    }
                    // Si NO hay state, dejar que el navegador maneje la navegación normal
                });

                // Initial load: SOLO si es una ruta del sidebar
                var initial = location.pathname;
                var basePath = initial.split('?')[0];  // Quitar query string
                
                if (basePath && basePath !== '/Admin/Dashboard' && mapping[basePath]) {
                    loadUrl(mapping[basePath], true);
                }
            });
        })();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>