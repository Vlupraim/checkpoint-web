@using System.Globalization;

@{
    var isLoginPage = Context.Request.Path.StartsWithSegments("/Account/Login", StringComparison.OrdinalIgnoreCase);
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - checkpoint_web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/checkpoint_web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand me-3" asp-area="" asp-page="/Account/DashboardRedirect">checkpoint_web</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#topNavbar" aria-controls="#topNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="topNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-md-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Account/DashboardRedirect">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                    </ul>

                    @* center search for md+ screens, hide on login page *@
                    @if (!isLoginPage)
                    {
                    <form class="d-none d-md-flex mx-auto" method="get" asp-page="/Account/DashboardRedirect">
                        <input class="form-control me-2" type="search" placeholder="Search..." aria-label="Search" />
                        <button class="btn btn-outline-secondary" type="submit">Search</button>
                    </form>
                    }

                    <ul class="navbar-nav ms-auto">
                        @if (!isLoginPage && User.Identity?.IsAuthenticated == true)
                        {
                            @await Component.InvokeAsync("Notifications")
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userMenu" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Hola, @User.Identity.Name
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenu">
                                <li><a class="dropdown-item" asp-page="/Account/DashboardRedirect">Mi Dashboard</a></li>
                                @if (User.IsInRole("Administrador"))
                                {
                                <li><a class="dropdown-item" asp-page="/Admin/Dashboard">Admin Dashboard</a></li>
                                }
                                @if (User.IsInRole("PersonalBodega"))
                                {
                                <li><a class="dropdown-item" asp-page="/Bodega/Dashboard">Bodega Dashboard</a></li>
                                }
                                @if (User.IsInRole("ControlCalidad"))
                                {
                                <li><a class="dropdown-item" asp-page="/Calidad/Dashboard">Calidad Dashboard</a></li>
                                }
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <form method="post" asp-page="/Account/Logout" class="px-3" id="logoutForm">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-link dropdown-item">Logout</button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                        }
                        else if (!isLoginPage)
                        {
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Account/Login">Login</a>
                        </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy;2025 - checkpoint_web - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>