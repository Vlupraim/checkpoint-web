@page
@model checkpoint_web.Pages.Fragments.UsuariosModel
@{
    Layout = Request.Headers["X-Requested-With"] == "XMLHttpRequest" ? null : "/Pages/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-people"></i> Gestión de Usuarios y Roles</h2>
    <a href="/Admin/Users/Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Nuevo Usuario
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div id="alertContainer"></div>

<!-- Token AntiForgery para AJAX -->
<form id="ajaxTokenForm" style="display:none;">
    @Html.AntiForgeryToken()
</form>

<div class="card">
    <div class="card-body">
        @if (Model.Usuarios.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>EMAIL</th>
                            <th>NOMBRE DE USUARIO</th>
                            <th>ROLES</th>
                            <th>ACCIONES</th>
                        </tr>
                    </thead>
                    <tbody id="usersTableBody">
                        @foreach (var usuario in Model.Usuarios)
                        {
                            <tr id="user-row-@usuario.Id">
                                <td>@usuario.Email</td>
                                <td>@usuario.Nombre</td>
                                <td>
                                    @if (usuario.Roles.Any())
                                    {
                                        @foreach (var role in usuario.Roles)
                                        {
                                            <span class="badge bg-primary me-1">@role</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">Sin roles</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="/Admin/Users/EditRoles?id=@usuario.Id" class="btn btn-outline-primary">
                                            <i class="bi bi-pencil"></i> Editar Roles
                                        </a>
                                        <button type="button" class="btn btn-outline-danger" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#deleteModal"
                                                data-user-id="@usuario.Id"
                                                data-user-email="@usuario.Email">
                                            <i class="bi bi-trash"></i> Eliminar
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                No hay usuarios registrados en el sistema.
            </div>
        }
    </div>
</div>

<!-- Modal de Confirmación de Eliminación -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="bi bi-exclamation-triangle"></i> Confirmar Eliminación
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mb-2">¿Está seguro de eliminar el usuario?</p>
                <p class="mb-0"><strong id="userEmailDisplay"></strong></p>
                <p class="text-danger mt-3 mb-0">
                    <i class="bi bi-info-circle"></i> Esta acción no se puede deshacer.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">
                    <i class="bi bi-trash"></i> Eliminar Usuario
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function() {
            var currentUserId = null;
            var currentUserEmail = null;
            var deleteModal = document.getElementById('deleteModal');
            var modalInstance = null;

            // Cuando se abre el modal
            deleteModal.addEventListener('show.bs.modal', function (event) {
                var button = event.relatedTarget;
                currentUserId = button.getAttribute('data-user-id');
                currentUserEmail = button.getAttribute('data-user-email');
                
                console.log('Modal opened for user:', currentUserId, currentUserEmail);
                
                document.getElementById('userEmailDisplay').textContent = currentUserEmail;
                modalInstance = bootstrap.Modal.getInstance(deleteModal) || new bootstrap.Modal(deleteModal);
            });

            // Cuando se confirma la eliminación
            document.getElementById('confirmDeleteBtn').addEventListener('click', function() {
                console.log('Delete button clicked for user:', currentUserId);
                
                if (!currentUserId) {
                    console.error('No user ID found');
                    showAlert('danger', 'Error: No se pudo identificar el usuario a eliminar');
                    return;
                }

                // Deshabilitar el botón para evitar doble clic
                var btn = this;
                btn.disabled = true;
                btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Eliminando...';

                // Obtener el token antiforgery
                var token = document.querySelector('#ajaxTokenForm input[name="__RequestVerificationToken"]')?.value;
                console.log('Token found:', !!token);

                if (!token) {
                    console.error('Antiforgery token not found');
                    showAlert('danger', 'Error de seguridad: Token no encontrado');
                    resetButton(btn);
                    return;
                }

                // Crear FormData con el token y el id
                var formData = new FormData();
                formData.append('__RequestVerificationToken', token);
                formData.append('id', currentUserId);

                // Hacer POST con AJAX
                fetch('/Admin/Users/Delete', {
                    method: 'POST',
                    body: formData,
                    credentials: 'same-origin',
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                })
                .then(response => {
                    console.log('Response status:', response.status, response.statusText);
                    
                    // Check if response is OK (200-299)
                    if (!response.ok) {
                        throw new Error(`HTTP ${response.status}: ${response.statusText}`);
                    }
                    
                    // For redirects, follow them
                    if (response.redirected) {
                        console.log('Redirected to:', response.url);
                    }
                    
                    return response.text();
                })
                .then(html => {
                    console.log('User deleted successfully');
                    
                    // Cerrar el modal
                    if (modalInstance) {
                        modalInstance.hide();
                    }

                    // Eliminar la fila de la tabla (efecto visual inmediato)
                    var row = document.getElementById('user-row-' + currentUserId);
                    if (row) {
                        row.style.transition = 'opacity 0.3s';
                        row.style.opacity = '0';
                        setTimeout(() => row.remove(), 300);
                    }

                    // Mostrar mensaje de éxito
                    showAlert('success', `Usuario <strong>${escapeHtml(currentUserEmail)}</strong> eliminado exitosamente`);
                })
                .catch(error => {
                    console.error('Error deleting user:', error);
                    
                    // Cerrar el modal
                    if (modalInstance) {
                        modalInstance.hide();
                    }

                    // Mostrar error
                    showAlert('danger', `Error al eliminar el usuario: ${error.message}`);
                })
                .finally(() => {
                    // Restaurar el botón
                    resetButton(btn);
                    currentUserId = null;
                    currentUserEmail = null;
                });
            });

            function showAlert(type, message) {
                var iconClass = type === 'success' ? 'bi-check-circle' : 'bi-exclamation-triangle';
                var alertHtml = `
                    <div class="alert alert-${type} alert-dismissible fade show">
                        <i class="bi ${iconClass}"></i> ${message}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                `;
                document.getElementById('alertContainer').innerHTML = alertHtml;

                // Auto-cerrar el alert después de 5 segundos
                setTimeout(() => {
                    var alert = document.querySelector('#alertContainer .alert');
                    if (alert) {
                        var bsAlert = new bootstrap.Alert(alert);
                        bsAlert.close();
                    }
                }, 5000);
            }

            function resetButton(btn) {
                btn.disabled = false;
                btn.innerHTML = '<i class="bi bi-trash"></i> Eliminar Usuario';
            }

            function escapeHtml(text) {
                var div = document.createElement('div');
                div.textContent = text;
                return div.innerHTML;
            }
        })();
    </script>
}