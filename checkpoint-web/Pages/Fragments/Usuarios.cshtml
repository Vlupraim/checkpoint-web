@page
@model checkpoint_web.Pages.Fragments.UsuariosModel
@{
    Layout = Request.Headers["X-Requested-With"] == "XMLHttpRequest" ? null : "/Pages/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-people"></i> Gestión de Usuarios y Roles</h2>
    <a href="/Admin/Users/Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Nuevo Usuario
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div id="alertContainer"></div>

<div class="card">
    <div class="card-body">
        @if (Model.Usuarios.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>EMAIL</th>
                            <th>NOMBRE DE USUARIO</th>
                            <th>ROLES</th>
                            <th>ACCIONES</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var usuario in Model.Usuarios)
                        {
                            <tr id="user-row-@usuario.Id">
                                <td>@usuario.Email</td>
                                <td>@usuario.Nombre</td>
                                <td>
                                    @if (usuario.Roles.Any())
                                    {
                                        @foreach (var role in usuario.Roles)
                                        {
                                            <span class="badge bg-primary me-1">@role</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">Sin roles</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="/Admin/Users/EditRoles?id=@usuario.Id" class="btn btn-outline-primary">
                                            <i class="bi bi-pencil"></i> Editar Roles
                                        </a>
                                        <button type="button" class="btn btn-outline-danger" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#deleteModal"
                                                data-user-id="@usuario.Id"
                                                data-user-email="@usuario.Email">
                                            <i class="bi bi-trash"></i> Eliminar
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                No hay usuarios registrados en el sistema.
            </div>
        }
    </div>
</div>

<!-- Modal de Confirmación de Eliminación -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="bi bi-exclamation-triangle"></i> Confirmar Eliminación
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mb-2">¿Está seguro de eliminar el usuario?</p>
                <p class="mb-0"><strong id="userEmailDisplay"></strong></p>
                <p class="text-danger mt-3 mb-0">
                    <i class="bi bi-info-circle"></i> Esta acción no se puede deshacer.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">
                    <i class="bi bi-trash"></i> Eliminar Usuario
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var currentUserId = null;
        var currentUserEmail = null;
        var deleteModal = document.getElementById('deleteModal');
        var modalInstance = null;

        // Cuando se abre el modal
        deleteModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            currentUserId = button.getAttribute('data-user-id');
            currentUserEmail = button.getAttribute('data-user-email');
            
            document.getElementById('userEmailDisplay').textContent = currentUserEmail;
            modalInstance = bootstrap.Modal.getInstance(deleteModal);
        });

        // Cuando se confirma la eliminación
        document.getElementById('confirmDeleteBtn').addEventListener('click', function() {
            if (!currentUserId) return;

            // Deshabilitar el botón para evitar doble clic
            this.disabled = true;
            this.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Eliminando...';

            // Obtener el token antiforgery
            var token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;

            // Hacer POST con AJAX
            fetch('/Admin/Users/Delete?id=' + encodeURIComponent(currentUserId), {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                    'RequestVerificationToken': token || ''
                },
                credentials: 'same-origin'
            })
            .then(response => {
                if (response.redirected) {
                    // Si hay redirect, parsear la URL para obtener TempData
                    return fetch(response.url, { 
                        method: 'GET',
                        headers: { 'X-Requested-With': 'XMLHttpRequest' }
                    }).then(r => r.text());
                }
                return response.text();
            })
            .then(html => {
                // Cerrar el modal
                if (modalInstance) {
                    modalInstance.hide();
                }

                // Eliminar la fila de la tabla (efecto visual inmediato)
                var row = document.getElementById('user-row-' + currentUserId);
                if (row) {
                    row.remove();
                }

                // Mostrar mensaje de éxito
                var alertHtml = `
                    <div class="alert alert-success alert-dismissible fade show">
                        Usuario ${currentUserEmail} eliminado exitosamente
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                `;
                document.getElementById('alertContainer').innerHTML = alertHtml;

                // Auto-cerrar el alert después de 5 segundos
                setTimeout(() => {
                    var alert = document.querySelector('#alertContainer .alert');
                    if (alert) {
                        var bsAlert = new bootstrap.Alert(alert);
                        bsAlert.close();
                    }
                }, 5000);
            })
            .catch(error => {
                console.error('Error:', error);
                
                // Cerrar el modal
                if (modalInstance) {
                    modalInstance.hide();
                }

                // Mostrar error
                var alertHtml = `
                    <div class="alert alert-danger alert-dismissible fade show">
                        Error al eliminar el usuario. Por favor, intente nuevamente.
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                `;
                document.getElementById('alertContainer').innerHTML = alertHtml;
            })
            .finally(() => {
                // Restaurar el botón
                var btn = document.getElementById('confirmDeleteBtn');
                btn.disabled = false;
                btn.innerHTML = '<i class="bi bi-trash"></i> Eliminar Usuario';
                currentUserId = null;
                currentUserEmail = null;
            });
        });
    </script>
}