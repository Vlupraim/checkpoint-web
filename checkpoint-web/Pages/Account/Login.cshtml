@page
@model checkpoint_web.Pages.Account.LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Checkpoint - Iniciar Sesión</title>
    <link rel="stylesheet" href="~/css/login-cyberpunk.css" asp-append-version="true" />
</head>
<body>
    <div class="login-minimal">
        <div class="login-container">
        <div class="login-logo">
      <img src="~/images/CheckpointLogoFinal.png" alt="Logo Checkpoint" />
  </div>

      <h1 class="login-title">Iniciar Sesión</h1>
            
@if (!ModelState.IsValid)
   {
        <div class="error-message">
        @foreach (var error in ModelState.Values.SelectMany(v => v.Errors))
     {
                  <div>@error.ErrorMessage</div>
             }
          </div>
            }
 
            <form method="post" class="login-form">
     <div class="form-group">
    <input asp-for="Email" 
          class="form-input" 
            placeholder="Usuario"
          autocomplete="username" />
        </div>
              
    <div class="form-group">
   <input asp-for="Password" 
   type="password" 
         class="form-input" 
          placeholder="Contraseña"
     autocomplete="current-password" />
    </div>
    
    <div class="form-group" style="text-align: left; margin-bottom: 20px;">
        <label style="display: flex; align-items: center; cursor: pointer; font-size: 0.9rem;">
    <input asp-for="RememberMe" 
          type="checkbox" 
    style="width: auto; height: auto; margin-right: 8px;" />
  <span>Recuérdame (mantener sesión por 30 días)</span>
   </label>
    </div>
          
    <button type="submit" class="login-button">
             Ingresar
     </button>
     
    <div class="login-footer">
          CHECKPOINT SYSTEM
        </div>
    </form>
        </div>
    </div>
</body>
</html>
