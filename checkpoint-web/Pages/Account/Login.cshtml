@page
@model checkpoint_web.Pages.Account.LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Checkpoint - Iniciar Sesi&oacute;n</title>
    <link rel="stylesheet" href="~/css/login-cyberpunk.css" asp-append-version="true" />
</head>
<body>
    <div class="login-minimal">
        <div class="login-container">
      <h1 class="login-title">Iniciar Sesi&oacute;n</h1>
            
@if (!ModelState.IsValid)
   {
        <div class="error-message">
        @foreach (var error in ModelState.Values.SelectMany(v => v.Errors))
     {
                  <div>@error.ErrorMessage</div>
             }
          </div>
            }
 
            <form method="post" class="login-form">
     <div class="form-group">
    <input asp-for="Email" 
          class="form-input" 
            placeholder="Usuario"
          autocomplete="username" />
        </div>
              
    <div class="form-group">
   <input asp-for="Password" 
   type="password" 
         class="form-input" 
          placeholder="ContraseÃ±a"
     autocomplete="current-password" />
    </div>
          
    <button type="submit" class="login-button">
             Ingresar
     </button>
             
    <div class="login-footer">
          CHECKPOINT SYSTEM
          </div>
    </form>
        </div>
    </div>
</body>
</html>
