@page
@model checkpoint_web.Pages.Productos.CreateModel
@{
 ViewData["Title"] = "Crear Producto";
 Layout = Request.Headers["X-Requested-With"] == "XMLHttpRequest" ? null : "/Pages/Shared/_AdminLayout.cshtml";
}

<div class="container">
 <div class="row">
 <div class="col-md-8">
 <h1 class="mb-4"><i class="bi bi-box-seam"></i> Crear Producto</h1>
 <div class="card">
 <div class="card-body">
 <form method="post">
 @Html.AntiForgeryToken()
 <div class="mb-3">
 <label asp-for="Producto.Sku" class="form-label">SKU</label>
 <input asp-for="Producto.Sku" class="form-control" />
 <span asp-validation-for="Producto.Sku" class="text-danger"></span>
 </div>
 <div class="mb-3">
 <label asp-for="Producto.Nombre" class="form-label">Nombre</label>
 <input asp-for="Producto.Nombre" class="form-control" />
 <span asp-validation-for="Producto.Nombre" class="text-danger"></span>
 </div>
 <div class="mb-3">
 <label asp-for="Producto.Unidad" class="form-label">Unidad</label>
 <input asp-for="Producto.Unidad" class="form-control" />
 </div>
 <div class="mb-3">
 <label asp-for="Producto.VidaUtilDias" class="form-label">Vida útil (días)</label>
 <input asp-for="Producto.VidaUtilDias" class="form-control" type="number" />
 </div>
 <div class="mb-3 row">
 <div class="col-md-6">
 <label asp-for="Producto.TempMin" class="form-label">Temp Min</label>
 <input asp-for="Producto.TempMin" class="form-control" type="number" step="0.01" />
 </div>
 <div class="col-md-6">
 <label asp-for="Producto.TempMax" class="form-label">Temp Max</label>
 <input asp-for="Producto.TempMax" class="form-control" type="number" step="0.01" />
 </div>
 </div>
 <div class="mb-3">
 <label asp-for="Producto.StockMinimo" class="form-label">Stock Mínimo</label>
 <input asp-for="Producto.StockMinimo" class="form-control" type="number" step="0.01" />
 </div>
 <div class="mb-3 form-check">
 <input asp-for="Producto.Activo" class="form-check-input" />
 <label asp-for="Producto.Activo" class="form-check-label">Activo</label>
 </div>
 <div class="d-flex gap-2">
 <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Crear</button>
 <a asp-page="Index" class="btn btn-secondary"><i class="bi bi-x-circle"></i> Cancelar</a>
 </div>
 </form>
 </div>
 </div>
 </div>
 </div>
</div>

@section Scripts {
 <partial name="_ValidationScriptsPartial" />
}
