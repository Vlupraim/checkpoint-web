@page
@model checkpoint_web.Pages.Productos.CreateModel
@{
 ViewData["Title"] = "Crear Producto";
}
<h1>Crear Producto</h1>
<form method="post">
 <div class="mb-3">
 <label asp-for="Producto.Sku" class="form-label"></label>
 <input asp-for="Producto.Sku" class="form-control" />
 <span asp-validation-for="Producto.Sku" class="text-danger"></span>
 </div>
 <div class="mb-3">
 <label asp-for="Producto.Nombre" class="form-label"></label>
 <input asp-for="Producto.Nombre" class="form-control" />
 <span asp-validation-for="Producto.Nombre" class="text-danger"></span>
 </div>
 <div class="mb-3">
 <label asp-for="Producto.Unidad" class="form-label"></label>
 <input asp-for="Producto.Unidad" class="form-control" />
 </div>
 <div class="mb-3">
 <label asp-for="Producto.VidaUtilDias" class="form-label"></label>
 <input asp-for="Producto.VidaUtilDias" class="form-control" />
 </div>
 <div class="mb-3">
 <label asp-for="Producto.TempMin" class="form-label"></label>
 <input asp-for="Producto.TempMin" class="form-control" />
 </div>
 <div class="mb-3">
 <label asp-for="Producto.TempMax" class="form-label"></label>
 <input asp-for="Producto.TempMax" class="form-control" />
 </div>
 <div class="mb-3">
 <label asp-for="Producto.StockMinimo" class="form-label"></label>
 <input asp-for="Producto.StockMinimo" class="form-control" />
 </div>
 <div class="mb-3 form-check">
 <input asp-for="Producto.Activo" class="form-check-input" />
 <label asp-for="Producto.Activo" class="form-check-label"></label>
 </div>
 <button type="submit" class="btn btn-primary">Crear</button>
</form>
@section Scripts {
 <partial name="_ValidationScriptsPartial" />
}
