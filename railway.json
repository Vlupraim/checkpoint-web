{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "dotnet publish checkpoint-web/checkpoint-web.csproj -c Release -o /app/publish"
  },
  "deploy": {
    "startCommand": "cd /app/publish && dotnet checkpoint-web.dll",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
